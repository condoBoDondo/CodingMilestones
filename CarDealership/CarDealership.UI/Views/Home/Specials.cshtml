@model IEnumerable<CarDealership.Models.Tables.Special>

@{
    ViewBag.Title = "SPECIALS";
}

<h3>Specials</h3>

<div class="p-4 mb-4 bg-light rounded-3">
    @foreach (var special in Model)
    {
    <div class="container-fluid p-4 mb-3 rounded-3 bg-primary bg-opacity-10">
        <div class="row">
            <div class="col-2">
                <img class="img-fluid" src="~/Images/sale.png" />
            </div>
            <div class="col-10">
                <div class="row">
                    <div class="col-10">
                        <h1 class="display-5 fw-bold">@special.Title</h1>
                    </div>
                    <div class="col-2">
                        @Html.ActionLink("Contact Us", "Contact", "Home", new { regarding = "Special: " + special.Title }, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="row">
                    <p class="col-md-8 fs-4">
                        @special.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
    }
</div>
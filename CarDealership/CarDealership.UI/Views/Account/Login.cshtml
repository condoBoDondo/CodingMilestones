@model CarDealership.UI.Models.LoginViewModel

@{
    ViewBag.Title = "EMPLOYEE LOGIN";
}

<h3>Employee Login</h3>

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "formContact", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="row mb-2">
                <label for="loginUserName" class="col-5 col-form-label"><strong>UserName (Email)</strong></label>
                <div class="col-7">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-2">
                <label for="loginPassword" class="col-5 col-form-label"><strong>Password</strong></label>
                <div class="col-7">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-12">
                    <button class="btn btn-primary">Log In</button>
                </div>
            </div>
        }
    </div>
</div>
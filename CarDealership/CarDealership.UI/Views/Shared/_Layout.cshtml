<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CAR DEALERSHIP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand">
        <div class="container rounded-3 bg-light mb-2 p-2">
            @Html.ActionLink("(logo here)", "Index", "Home", null, new { @class = "navbar-brand" })
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("New Inventory", "New", "Inventory", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Used Inventory", "Used", "Inventory", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Specials", "Specials", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link text-success" })</li>
                    }
                    if (User.IsInRole("sales") || User.IsInRole("admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Sales", "Index", "Sales", null, new { @class = "nav-link text-success" })</li>
                        <li class="nav-item">@Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "nav-link text-success" })</li>
                    }
                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false) @*running individual pages' sections named "scripts", if they exist*@
</body>
</html>
